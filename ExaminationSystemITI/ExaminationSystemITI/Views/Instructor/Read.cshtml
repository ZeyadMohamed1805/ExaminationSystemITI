@using System.Collections
@using ExaminationSystemITI.Models.ViewModels
@model List<InstructorCoursesViewModel>

@{
    ViewData["Title"] = "Dashboard";
    Layout = "_DashboardLayout";
}
<seciton class="w-100 d-flex flex-column" style="gap: 16px;">
    <select class="form-select w-100">
        <option class="form-control" onclick="location.href='/admin/read'">Admin</option>
        <option class="form-control" onclick="location.href='/choice/read'">Choice</option>
        <option class="form-control" onclick="location.href='/course/read'">Course</option>
        <option class="form-control" onclick="location.href='/department/read'">Department</option>
        <option class="form-control" onclick="location.href='/exam/read'">Exam</option>
        <option class="form-control" onclick="location.href='/instructor/read'" selected>Instructor</option>
        <option class="form-control" onclick="location.href='/question/read'">Question</option>
        <option class="form-control" onclick="location.href='/student/read'">Student</option>
        <option class="form-control" onclick="location.href='/topic/read'">Topic</option>
        <option class="form-control" onclick="location.href='/user/read'">User</option>
    </select>
    <a asp-action="create" asp-controller="Instructor" class="btn btn-success poppins-semibold rounded" style="padding: 8px 16px; border: none;text-decoration: none; text-align: center;">
        Create
    </a>


    <table class="get-data table table-border table-hover">
        <thead>
            <tr>
                <th>Instructor ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Age</th>
                <th>Salary</th>
                <th>Address</th>
                <th>Courses</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>

            @if(Model.Count()==0)
            {
                <tr>
                    <td colspan="9">No Instructors Yet</td>
                </tr>
            }else
            {
                @foreach (var instructor in Model)
                {
                    <tr>
                        <td>@instructor.Instructor.ID</td>
                        <td>@instructor.Instructor.FirstName</td>
                        <td>@instructor.Instructor.LastName</td>
                        <td>@instructor.Instructor.Age</td>
                        <td>@instructor.Instructor.Salary</td>
                        <td>@instructor.Instructor.Address</td>
                        <td>
                            @foreach( var course in Model )
                                @if( course.Instructor.ID == instructor.Instructor.ID && course.Courses.Count() > 0 )
                                    @foreach( var c in course.Courses )
                                        @c.Name
                        </td>
                        <td>@instructor.Instructor.Email</td>
                        <td>
                            <a asp-action="Edit" asp-controller="Instructor" asp-route-id="@instructor.Instructor.ID" class="btn btn-primary poppins-semibold rounded" style="padding: 8px 16px; border: none;transition-duration: 0.25s; text-decoration: none; text-align: center;">
                                Update
                            </a>
                            <a asp-action="Delete" asp-controller="Instructor" asp-route-id="@instructor.Instructor.ID" class="btn btn-danger poppins-semibold rounded" style="padding: 8px 16px; border: none;text-decoration: none; text-align: center;" onclick="return confirm('Are you sure?')">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            }


        </tbody>
    </table>

</seciton>