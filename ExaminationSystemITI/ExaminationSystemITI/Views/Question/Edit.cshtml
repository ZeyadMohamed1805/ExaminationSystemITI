@using ExaminationSystemITI.Models.Tables
@model ExaminationSystemITI.Models.Tables.Question

@{
    ViewData["Title"] = "Edit";
    Layout = "_DashboardLayout";
}




<h1 class="poppins-bold" style="color: var(--custom-black)">Edit Question</h1>
<hr style="backround-color: var(--custom-black); color: var(--custom-black); height: 1px;" />
<div class="row w-100">
    <div class="col-md-4 w-100">
        <form method="post" class="d-flex flex-column" style="gap: 16px;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            @*   Id Type Title CorrectAnswer CourseId *@
            <div class="form-group">
                <label asp-for="Type" class="control-label poppins-semibold mb-1" style="color: var(--custom-black)"></label>
                <input asp-for="Type" value="@Model.Type" readonly class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label poppins-semibold mb-1" style="color: var(--custom-black)"></label>
                <input asp-for="Title" value="@Model.Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CorrectAnswer" class="control-label poppins-semibold mb-1" style="color: var(--custom-black)"></label>
                <input asp-for="CorrectAnswer" value="@Model.CorrectAnswer" class="form-control" />
                <span asp-validation-for="CorrectAnswer" class="text-danger"></span>
            </div>
            <div class="form-group d-none" >
                <label asp-for="CourseId" class="control-label poppins-semibold mb-1" style="color: var(--custom-black)"></label>
                <input asp-for="CourseId" value="@Model.CourseId" class="form-control" />
                <span asp-validation-for="CourseId" class="text-danger"></span>
            </div>

            <div class="form-group w-100 d-flex flex-column" style="margin-top: 8px; gap: 8px;">
                <input type="submit" value="Edit" class="poppins-semibold w-100 rounded" style="border: none; background-color: var(--custom-red); color: var(--custom-white); padding: 8px 16px;" />
                <a asp-action="read" asp-controller="Question" class="w-100 poppins-semibold rounded" style="background-color: var(--custom-white); color: var(--custom-red);padding: 8px 16px; border: solid 1px var(--custom-red); text-decoration: none; text-align: center;">
                    Go Back
                </a>
            </div>

        </form>
