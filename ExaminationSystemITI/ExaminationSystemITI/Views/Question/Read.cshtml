@using ExaminationSystemITI.Models.Tables
@model IEnumerable<Question>
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_DashboardLayout";
   
}
<seciton class="w-100 d-flex flex-column" style="gap: 16px;">
    <select class="form-select w-100">
        <option class="form-control">Admin</option>
        <option class="form-control">Choice</option>
        <option class="form-control">Course</option>
        <option class="form-control">Department</option>
        <option class="form-control">Exam</option>
        <option class="form-control">Instructor</option>
        <option class="form-control">Question</option>
        <option class="form-control" selected>Student</option>
        <option class="form-control">Topic</option>
        <option class="form-control">User</option>
        <option class="form-control">Admin</option>
    </select>
    <a asp-action="create" asp-controller="Question" class="btn btn-success poppins-semibold rounded" style="padding: 8px 16px; border: none;text-decoration: none; text-align: center;">
        Create
    </a>
    <table class="get-data table table-border table-hover">
        <thead>
            <tr>
           
                <th>Id</th>
                <th>Type</th>
                <th>Title</th>
                <th>Correct Answer</th>
                <th>Course</th>
                <th>Options</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="7">No Student Exist!!</td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Type</td>
                        <td>@item.Title</td>
                        <td>@item.CorrectAnswer</td>             
                        <td>@item.Course.Name</td>  
                        <td>
                            <a asp-action="Edit" asp-controller="Question" asp-route-id="@item.Id" class="btn btn-primary poppins-semibold rounded" style="padding: 8px 16px; border: none;transition-duration: 0.25s; text-decoration: none; text-align: center;">
                                Update
                            </a>
                            <a asp-action="Delete" asp-controller="Question" asp-route-id="@item.Id" class="btn btn-danger poppins-semibold rounded" style="padding: 8px 16px; border: none;text-decoration: none; text-align: center;" onclick="return confirm('Are you sure?')">
                                Delete
                            </a>
                        </td> 
                    </tr>
                }
            }
        </tbody>
    </table>
</seciton>
