@using ExaminationSystemITI.Models.Tables
@model List<Course>
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_DashboardLayout";
}

<seciton class="w-100 d-flex flex-column" style="gap: 16px;">
    <select class="form-select w-100">
        <option class="form-control" onclick="location.href='/admin/read'">Admin</option>
        <option class="form-control" onclick="location.href='/choice/read'">Choice</option>
        <option class="form-control" onclick="location.href='/course/read'" selected>Course</option>
        <option class="form-control" onclick="location.href='/department/read'">Department</option>
        <option class="form-control" onclick="location.href='/exam/read'">Exam</option>
        <option class="form-control" onclick="location.href='/instructor/read'">Instructor</option>
        <option class="form-control" onclick="location.href='/question/read'">Question</option>
        <option class="form-control" onclick="location.href='/student/read'">Student</option>
        <option class="form-control" onclick="location.href='/topic/read'">Topic</option>
        <option class="form-control" onclick="location.href='/user/read'">User</option>
    </select>
    <a asp-action="create" asp-controller="course" class="btn btn-success poppins-semibold rounded" style="padding: 8px 16px; border: none;text-decoration: none; text-align: center;">
        Create
    </a>
    <div class="modal fade" id="deleteConfirmationModal" tabindex="-1" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteConfirmationModalLabel">Confirm Deletion</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this Course?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <a id="deleteCourseLink" class="btn btn-danger">Delete</a>
                </div>
            </div>
        </div>
    </div>

    <table class="get-data table table-border table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Grade</th>
                <th>Topics</th>
                <th>Departments</th>
                <th>Instructors</th>
                <th>Students</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="9">No Courses Exist!</td>
                </tr>
            }
            else
            {
                foreach (var course in Model)
                {
                    <tr>
                        <td>@course.Id</td>
                        <td>@course.Name</td>
                        <td>@course.Grade</td>
                        <td>
                            @foreach (var topic in course.Topics)
                            {
                                <span class="mr-1">
                                    @topic.Name,
                                </span>
                            }
                        </td>
                        <td>
                            @foreach (var department in course.Departments)
                            {
                                <span class="mr-1">
                                    @department.Name,
                                </span>
                            }
                        </td>
                        <td>
                            @foreach (var instructor in course.Instructors)
                            {
                                <span class="mr-1">
                                    @instructor.FirstName,
                                </span>
                            }
                        </td>
                        <td>
                            @foreach (var student in course.StudentCourses)
                            {
                                <span class="mr-1">
                                    @student.StudentId,
                                </span>
                            }
                        </td>
                        <td>
                            <a asp-action="Edit" asp-controller="Course" asp-route-id="@course.Id" class="btn btn-primary poppins-semibold rounded" style="padding: 8px 16px; border: none;transition-duration: 0.25s; text-decoration: none; text-align: center;">
                                Update
                            </a>
                       @*      <a asp-action="Delete" asp-controller="Course" asp-route-id="@course.Id" class="btn btn-danger poppins-semibold rounded" style="padding: 8px 16px; border: none;text-decoration: none; text-align: center;" onclick="return confirm('Are you sure?')">
                                Delete
                            </a> *@
                            <a href="#" onclick="confirmDelete('@course.Id')" class="btn btn-danger poppins-semibold rounded" style="padding: 8px 16px; border: none; text-decoration: none; text-align: center;">Delete</a>

                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <script>
        // Function to handle deletion confirmation
        function confirmDelete(id) {
            document.getElementById('deleteCourseLink').href = '/Course/Delete/' + id;
            $('#deleteConfirmationModal').modal('show');
        }
    </script>
</seciton>
