@model Choice

@{
    ViewData["Title"] = "Update";
}

<h1>Update</h1>

<h4>Choice</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="@Model.Text"></label>
                <input value="@Model.Text" disabled class="form-control" />
            </div>
            
            <div class="form-group">
                <label>New Text</label>
                <input name="newText" value="@Model.Text" class="form-control" />
                <span asp-validation-for="@Model.Text"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Id"></label>
                <input value="@Model.Id"  disabled class="form-control" />
            </div>


            <input type="submit" value="Update Choice" class="btn btn-primary" />
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <partial src="_ValidationScriptsPartial"></partial>
}