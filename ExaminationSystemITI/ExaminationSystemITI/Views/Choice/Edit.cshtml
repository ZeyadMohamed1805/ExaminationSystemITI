@using ExaminationSystemITI.Models.Tables
@model Choice

@{
    ViewData["Title"] = "Edit";
    Layout = "_DashboardLayout";
}

<h1 class="poppins-bold" style="color: var(--custom-black)">Edit Choice</h1>
<hr style="backround-color: var(--custom-black); color: var(--custom-black); height: 1px;" />
<div class="row w-100">
    <div class="col-md-4 w-100">
        <form method="post" class="d-flex flex-column" style="gap: 16px;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Text" class="control-label poppins-semibold mb-1" style="color: var(--custom-black)"></label>
                <input asp-for="Text" value="@Model.Text" class="form-control" />
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label poppins-semibold mb-1" style="color: var(--custom-black)">
                    New Text
                </label>
                <input name="newText" value="@Model.Text" class="form-control" />
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Id" class="control-label poppins-semibold mb-1" style="color: var(--custom-black)"></label>
                <input asp-for="Id" value="@Model.Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>

            <div class="form-group w-100 d-flex flex-column" style="margin-top: 8px; gap: 8px;">
                <input type="submit" value="Edit" class="poppins-semibold w-100 rounded" style="border: none; background-color: var(--custom-red); color: var(--custom-white); padding: 8px 16px;" />
                <a asp-action="read" asp-controller="Choice" class="w-100 poppins-semibold rounded" style="background-color: var(--custom-white); color: var(--custom-red);padding: 8px 16px; border: solid 1px var(--custom-red); text-decoration: none; text-align: center;">
                    Go Back
                </a>
            </div>

        </form>

        @section Scripts {
            <partial src="_ValidationScriptsPartial"></partial>
        }
