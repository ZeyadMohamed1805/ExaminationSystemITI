@using ExaminationSystemITI.Models.ViewModels
@using ExaminationSystemITI.Abstractions.Enums
@model ExamCourseQuestionViewModel

@{
    ViewData["Title"] = "Edit";

    var courses = ViewBag.Courses;
    // var questions = ViewBag.Questions;
    Layout = "_DashboardLayout";
}



<h1 class="poppins-bold" style="color: var(--custom-black)">Edit Exam</h1>
<hr style="backround-color: var(--custom-black); color: var(--custom-black); height: 1px;" />
<div class="row w-100">
    <div class="col-md-4 w-100">
        <form method="post" class="d-flex flex-column" style="gap: 16px;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Exam.ID" />
            <div class="form-group">
                <label asp-for="Exam.Duration" class="control-label poppins-semibold mb-1" style="color: var(--custom-black)"></label>
                <input asp-for="Exam.Duration" value="@Model.Exam.Duration" class="form-control" />
                <span asp-validation-for="Exam.Duration" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Exam.Date" class="control-label poppins-semibold mb-1" style="color: var(--custom-black)"></label>
                <input asp-for="Exam.Date" value="@Model.Exam.Date" class="form-control" />
                <span asp-validation-for="Exam.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Exam.QCount" class="control-label poppins-semibold mb-1" style="color: var(--custom-black)"></label>
                <input asp-for="Exam.QCount" value="@Model.Exam.QCount" class="form-control" />
                <span asp-validation-for="Exam.QCount" class="text-danger"></span>
            </div>
              <div class="form-group">
                <label asp-for="Exam.TotalMarks" class="control-label poppins-semibold mb-1" style="color: var(--custom-black)"></label>
                <input asp-for="Exam.TotalMarks" value="@Model.Exam.TotalMarks" class="form-control" />
                <span asp-validation-for="Exam.TotalMarks" class="text-danger"></span>
            </div>
           

            <div class="form-group d-none">
                <label asp-for="Exam.CourseID" class="control-label poppins-semibold mb-1" style="color: var(--custom-black)"></label>
                <select asp-for="Exam.CourseID" value="@Model.Exam.CourseID" class="form-control">
                    <option value="">Select Course</option>
                    @foreach (var course in courses)
                    {
                        <option value="@course.Id">@course.Name</option>
                    }
                </select>
            </div>



            <div class="form-group w-100 d-flex flex-column" style="margin-top: 8px; gap: 8px;">
                <input type="submit" value="Edit" class="poppins-semibold w-100 rounded" style="border: none; background-color: var(--custom-red); color: var(--custom-white); padding: 8px 16px;" />
                <a asp-action="read" asp-controller="Exam" class="w-100 poppins-semibold rounded" style="background-color: var(--custom-white); color: var(--custom-red);padding: 8px 16px; border: solid 1px var(--custom-red); text-decoration: none; text-align: center;">
                    Go Back
                </a>
            </div>
        </form>
    </div>
</div> 