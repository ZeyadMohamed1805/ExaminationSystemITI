@using ExaminationSystemITI.Abstractions.Enums
@using ExaminationSystemITI.Models.Tables
@model List<Exam>
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_DashboardLayout";
    bool isAdmin = User.IsInRole(ERole.Admin.ToString());
}

<seciton class="w-100 d-flex flex-column" style="gap: 16px;">
@if (isAdmin)
{
        <select class="form-select w-100">
            <option class="form-control" onclick="location.href='/admin/read'">Admin</option>
            <option class="form-control" onclick="location.href='/choice/read'">Choice</option>
            <option class="form-control" onclick="location.href='/course/read'">Course</option>
            <option class="form-control" onclick="location.href='/department/read'">Department</option>
            <option class="form-control" onclick="location.href='/exam/read'" selected>Exam</option>
            <option class="form-control" onclick="location.href='/instructor/read'">Instructor</option>
            <option class="form-control" onclick="location.href='/question/read'">Question</option>
            <option class="form-control" onclick="location.href='/student/read'">Student</option>
            <option class="form-control" onclick="location.href='/topic/read'">Topic</option>
            <option class="form-control" onclick="location.href='/user/read'">User</option>
        </select>
    }
    <a asp-action="create" asp-controller="Exam" class="btn btn-success poppins-semibold rounded" style="padding: 8px 16px; border: none;text-decoration: none; text-align: center;">
        Create
    </a>
    <table class="get-data table table-border table-hover">
        <thead>
            <tr>
                <th>Exam ID</th>
                <th>Duration (minutes)</th>
                <th>Date</th>
                <th>Number of Questions</th>
                <th>Total Marks</th>
                <th>Course</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="8">No Courses Exist!</td>
                </tr>
            }
            else
            {
                foreach (var exam in Model)
                {
                  <tr>    
                        <td>@exam.ID</td>
                        <td>@exam.Duration</td>
                        <td>@exam.Date.ToString("yyyy-MM-dd")</td>
                        <td>@exam.QCount</td>
                        <td>@exam.TotalMarks</td>
                        <td>@exam.Course.Name</td>                      
                        <td> 
                            <a asp-controller="Exam" asp-action="Display" asp-route-id="@exam.ID" class="btn btn-primary">Enter</a>

                            <a asp-action="Edit" asp-controller="Exam" asp-route-id="@exam.ID" class="btn btn-primary poppins-semibold rounded" style="padding: 8px 16px; border: none;transition-duration: 0.25s; text-decoration: none; text-align: center;">
                                Update
                            </a>
                            <a asp-action="Delete" asp-controller="Exam" asp-route-id="@exam.ID" class="btn btn-danger poppins-semibold rounded" style="padding: 8px 16px; border: none;text-decoration: none; text-align: center;" onclick="return confirm('Are you sure?')">
                                Delete
                            </a>
                        </td>
                   </tr>
                    
                }
            }
        </tbody>
    </table>
</seciton>

           

