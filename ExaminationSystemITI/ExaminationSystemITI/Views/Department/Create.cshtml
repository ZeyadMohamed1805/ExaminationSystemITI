@using ExaminationSystemITI.Models.Tables
@model ExaminationSystemITI.Models.Tables.Department

@{
    ViewData["Title"] = "Create";
    var supervisors = ViewBag.Supervisors;
    Layout = "_DashboardLayout";
}

<h1 class="poppins-bold" style="color: var(--custom-black)">Create Department</h1>
<hr style="backround-color: var(--custom-black); color: var(--custom-black); height: 1px;" />
<div class="row w-100">
    <div class="col-md-4 w-100">

             <form method="post" class="d-flex flex-column" style="gap: 16px;">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                        <div class="form-group">
                            <label asp-for="Name" class="control-label poppins-semibold mb-1" style="color: var(--custom-black)"></label>
                            <input asp-for="Name"  class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Branch" class="control-label poppins-semibold mb-1" style="color: var(--custom-black)"></label>
                            <input asp-for="Branch"  class="form-control" />
                            <span asp-validation-for="Branch" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="SP" class="control-label poppins-semibold mb-1" style="color: var(--custom-black)"></label>
                            <select asp-for="SP" class="form-control" required>
                                <option value="">Select Supervisor</option>
                                @if (supervisors != null)
                                {
                                    @foreach (var supervisor in supervisors)
                                    {
                                        <option value="@supervisor.ID">@supervisor.FirstName</option>
                                    }
                                }
                            </select>
                        </div>

                        @* <div class="form-group">
                            <label asp-for="SP" class="control-label poppins-semibold mb-1" style="color: var(--custom-black)"></label>
                            <input asp-for="SP" class="form-control" />
                            <span asp-validation-for="SP" class="text-danger"></span>
                        </div> *@

                        <div class="form-group w-100 d-flex flex-column" style="margin-top: 8px; gap: 8px;">
                            <input type="submit" value="Create" class="poppins-semibold w-100 rounded" style="border: none; background-color: var(--custom-red); color: var(--custom-white); padding: 8px 16px;" />
                            <a asp-action="Read" asp-controller="Department" class="w-100 poppins-semibold rounded" style="background-color: var(--custom-white); color: var(--custom-red);padding: 8px 16px; border: solid 1px var(--custom-red); text-decoration: none; text-align: center;">
                                Go Back
                            </a>
  
             </form>
    </div>
</div>









